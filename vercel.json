{
  "name": "rscs",
  "version": 2,
  "buildCommand": "next build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "cleanUrls": true,
  "installCommand": "pnpm install",
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 0 * * *"
    }
  ],
  "functions": {
    "src/app/api/**/*.ts": {
      "runtime": "edge",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "images": {
    "sizes": [256, 640, 1080],
    "remotePatterns": [
      {
        "protocol": "https",
        "hostname": "pbs.twimg.com"
      }
    ],
    "minimumCacheTTL": 300,
    "formats": ["image/webp"],
    "dangerouslyAllowSVG": false,
    "contentSecurityPolicy": "default-src 'self'; script-src 'none'; sandbox;"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:;"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "routes": [
    { "src": "/api/auth/callback", "dest": "/api/auth/callback" },
    { "src": "/api/auth/initiate", "dest": "/api/auth/initiate" },
    { "src": "/api/auth/verify", "dest": "/api/auth/verify" },
    { "src": "/api/check-voting", "dest": "/api/check-voting" },
    { "src": "/api/claim-account", "dest": "/api/claim-account" },
    { "src": "/api/fetch", "dest": "/api/fetch" },
    { "src": "/api/users/(?<username>[^/]+)/vote", "dest": "/api/users/[username]/vote" },
    { "src": "/api/users/(?<username>[^/]+)/removeVotes", "dest": "/api/users/[username]/removeVotes" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "node_modules/@rscs/rscs-backend/package.json",
      "use": "@vercel/node"
    }
  ]
}
